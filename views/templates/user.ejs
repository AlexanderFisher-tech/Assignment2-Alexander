<tr>
  <td><%= user.username %></td>
  <td><%= user.user_type %></td>
  <td>
    <% if (user.user_type === 'user') { %>
    <form action="/promote" method="POST" style="display: inline">
      <input type="hidden" name="username" value="<%= user.username %>" />
      <button class="btn btn-sm btn-outline-success">Promote</button>
    </form>
    <% } else if (user.user_type === 'admin') { %>
    <form action="/demote" method="POST" style="display: inline">
      <input type="hidden" name="username" value="<%= user.username %>" />
      <button class="btn btn-sm btn-outline-warning">Demote</button>
    </form>
    <% } %>
  </td>
</tr>
