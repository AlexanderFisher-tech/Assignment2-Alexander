<%- include("templates/header") %>

<div class="container mt-5 text-center">
  <% if (typeof username !== 'undefined') { %>
    <h2 class="mb-4">Welcome back, <%= username %>.</h2>
    <p class="text-muted">The loop resumes where it left off.</p>
    <div class="d-grid gap-3 col-6 mx-auto mt-4">
      <a href="/members" class="btn btn-primary">Enter the Pattern (members page)</a>
      <a href="/logout" class="btn btn-outline-danger">Break the Cycle (logout)</a>
    </div>
  <% } else { %>
    <h2 class="mb-4">The recursion awaits your entry.</h2>
    <div class="d-grid gap-3 col-6 mx-auto">
      <a href="/signup" class="btn btn-success">Initialize Instance (signup)</a>
      <a href="/login" class="btn btn-outline-primary">Resume Session (Login)</a>
    </div>
  <% } %>
</div>

<%- include("templates/footer") %>